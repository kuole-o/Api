{
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "declaration": true,
    "declarationMap": true,
    "types": ["node"],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "outDir": "./dist",
    "typeRoots": ["node_modules/@types", "node_modules"]
  },
  "include": ["src/**/*.ts", "node_modules/@vercel/node"],
  "exclude": ["node_modules", "*.test.*", "./dist/**/*"]
}
